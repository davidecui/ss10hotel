<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE configuration SYSTEM "http://ibatis.apache.org/dtd/ibatis-3-config.dtd">

<configuration>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="org.postgresql.Driver"/>
				<property name="url" value="jdbc:postgresql://localhost/gestionale_hotel"/>
				<property name="username" value="postgres"/>
				<property name="password" value="postgres"/>
			</dataSource>
		</environment>
	</environments>
		
	<mappers>
		<mapper resource="model/StrutturaMapper.xml"/>
		<mapper resource="model/CameraMapper.xml"/>
		<mapper resource="model/TipologiaMapper.xml" />
	</mappers>
</configuration>
				